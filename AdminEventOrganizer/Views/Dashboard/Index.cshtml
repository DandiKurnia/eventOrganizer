@model Models.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<div class="row">

    <!-- HERO CARD -->
    <div class="col-lg-8 mb-4 order-0">
        <div class="card">
            <div class="d-flex align-items-end row">
                <div class="col-sm-7">
                    <div class="card-body">
                        <h5 class="card-title text-primary">Dashboard Overview 🎯</h5>
                        <p class="mb-4">
                            Total <span class="fw-bold">@Model.TotalOrders</span> order tercatat.
                            <br />
                            <span class="fw-bold">@Model.BookingConfirmed</span> booking telah dikonfirmasi.
                        </p>
                        <a asp-controller="Order" asp-action="Index"
                           class="btn btn-sm btn-outline-primary">
                            Lihat Semua Order
                        </a>
                    </div>
                </div>
                <div class="col-sm-5 text-center text-sm-left">
                    <div class="card-body pb-0 px-0 px-md-4">
                        <img src="~/assets/img/illustrations/man-with-laptop-light.png"
                             height="140" alt="Dashboard" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- RIGHT TOP CARDS -->
    <div class="col-lg-4 col-md-4 order-1">
        <div class="row">

            <!-- TOTAL REVENUE -->
            <div class="col-lg-6 col-md-12 col-6 d-block h-100">
                <div class="card">
                    <div class="card-body">
                        <span class="fw-semibold d-block mb-1">Total Revenue</span>
                        <h3 class="card-title mb-2">
                            Rp @Model.TotalRevenue.ToString("N0")
                        </h3>
                        <small class="text-muted">Vendor booked</small>
                    </div>
                </div>
            </div>

            <!-- ACTIVE VENDORS -->
            <div class="col-lg-6 col-md-12 col-6">
                <div class="card">
                    <div class="card-body">
                        <span class="fw-semibold d-block mb-1">Vendor Aktif</span>
                        <h3 class="card-title mb-2">@Model.ActiveVendors</h3>
                        <small class="text-muted">Siap menerima order</small>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <!-- STATUS ORDER CARDS -->
    <div class="col-12 col-lg-8 order-2 mb-4">
        <div class="row">

            <!-- WAITING VALIDATION -->
            <div class="col-md-4 mb-4">
                <div class="card border-warning">
                    <div class="card-body">
                        <span class="d-block mb-1">Menunggu Validasi</span>
                        <h3 class="card-title">@Model.WaitingValidation</h3>

                        @if (Model.WaitingValidation > 0)
                        {
                            <small class="text-danger fw-semibold">
                                <i class="bx bx-error"></i> Perlu tindakan
                            </small>
                        } else
                        {
                            <small class="text-muted">Tidak ada Order</small>
                        }
                    </div>
                </div>
            </div>

            <!-- VENDOR CONFIRMATION -->
            <div class="col-md-4 mb-4">
                <div class="card border-info">
                    <div class="card-body">
                        <span class="d-block mb-1">Konfirmasi Vendor</span>
                        <h3 class="card-title">@Model.VendorConfirmation</h3>
                        <small class="text-muted">Sedang diproses</small>
                    </div>
                </div>
            </div>

            <!-- BOOKING CONFIRMED -->
            <div class="col-md-4 mb-4">
                <div class="card border-success">
                    <div class="card-body">
                        <span class="d-block mb-1">Booking Dikonfirmasi</span>
                        <h3 class="card-title">@Model.BookingConfirmed</h3>
                        <small class="text-muted">Order selesai</small>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <!-- UPCOMING EVENTS -->
    <div class="col-12 col-lg-4 order-3 mb-4">
        <div class="card">
            <div class="card-body">
                <h5 class="mb-2">Upcoming Events</h5>
                <h3>@Model.UpcomingEvents</h3>
                <small class="text-muted">
                    Event dalam 7 hari ke depan
                </small>
            </div>
        </div>
    </div>

</div>

<!-- ORDER STATISTICS -->
<div class="row">
    <div class="col-md-6 col-lg-4 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <h2 class="mb-2">@Model.TotalOrders</h2>
                <span>Total Orders</span>
            </div>
        </div>
    </div>
</div>
