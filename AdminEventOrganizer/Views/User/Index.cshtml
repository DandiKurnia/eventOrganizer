@model IEnumerable<Models.UserModel>
@{
    ViewData["Title"] = "Daftar User";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    TempData.Remove("SuccessMessage");
}

<div class="card shadow-sm">
    <!-- HEADER -->
    <div class="row align-items-center px-3 pt-3">
        <div class="col-md-6">
            <h5 class="mb-0">
                <i class="bx bx-user me-2"></i> Daftar User
            </h5>
        </div>

        <!-- SEARCH & ACTION -->
        <div class="col-md-6 d-flex justify-content-end">
            <div class="d-flex">
                <form asp-action="Index" method="get" class="d-flex me-2">
                    <div class="input-group">
                        <span class="input-group-text"><i class="tf-icons bx bx-search"></i></span>
                        <input type="text" name="search" class="form-control" placeholder="Search..."
                               value="@ViewBag.Search" />
                    </div>
                    <button type="submit" class="btn btn-primary ms-2">Cari</button>
                </form>

                <a asp-action="Create" class="btn btn-primary">
                    <i class="bx bx-plus me-1"></i> Tambah
                </a>
            </div>
        </div>
    </div>

    <hr />

    <!-- BODY -->
    <div class="card-body p-0">
        <div class="table-responsive text-nowrap">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>No</th>
                        <th>Nama</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Status</th>
                        <th>Tanggal Dibuat</th>
                        <th class="text-center">Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int no = (ViewBag.CurrentPage - 1) * 10 + 1;
                    }
                    @if (!Model.Any())
                    {
                        <tr><td colspan="7" class="text-center text-muted p-4">Data tidak ditemukan</td></tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@no</td>
                                <td><strong>@item.Name</strong></td>
                                <td>@item.Email</td>
                                <td class="text-capitalize">@item.Role</td>
                                <td>
                                    @if (item.IsActive)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Nonaktif</span>
                                    }
                                </td>
                                <td>@item.CreatedAt.ToString("dd MMM yyyy")</td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.UserId" class="btn btn-warning btn-sm" title="Edit">
                                            <i class="bx bxs-edit"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            no++;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

    @if (ViewBag.TotalPages > 1)
    {
        <nav class="mt-3 pb-3">
            <ul class="pagination justify-content-center mb-0">
                @{
                    int currentPage = ViewBag.CurrentPage;
                    int totalPages = ViewBag.TotalPages;
                    string search = ViewBag.Search;
                }

                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@(currentPage - 1)"
                       asp-route-search="@search">Previous</a>
                </li>

                @for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-page="@i"
                           asp-route-search="@search">@i</a>
                    </li>
                }

                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@(currentPage + 1)"
                       asp-route-search="@search">Next</a>
                </li>
            </ul>
        </nav>
    }
</div>
