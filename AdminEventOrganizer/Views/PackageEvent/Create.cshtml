
@{
    ViewData["Title"] = "Create Paket";
}


@model Models.PackageEventModel
<div class="row">
    <div class="col-xl">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Create Customer</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname">Nama Paket</label>
                        <input type="text" asp-for="PackageName" class="form-control" placeholder="Nama Paket" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname">Harga Mulai</label>
                        <input type="number" asp-for="BasePrice" class="form-control" placeholder="Harga Mulai" required>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Status" class="form-label">Status</label>
                        <select asp-for="Status" class="form-select">
                            <option value="Active">Active</option>
                            <option value="Inactive">Inactive</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname">Deskripsi Paket</label>
                        <textarea asp-for="Description" id="basic-default-message" class="form-control" placeholder="Deskripsi Paket" rows="6"></textarea>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname">Photo </label>
                            <input type="file" id="photoInput" name="PhotoFiles" class="form-control" multiple accept="image/*" />
                            <small class="text-muted">Kamu bisa pilih beberapa gambar sekaligus</small>
                    </div>
                    <div class="mb-3">
                        <div id="photoPreview" class="d-flex flex-wrap gap-2 mb-3 border rounded p-3">
                            <p class="text-muted" id="previewPlaceholder">Belum ada foto dipilih.</p>
                        </div>
                    </div>
                    <div class="d-flex justify-content-end mt-2 gap-2">
                        <a asp-action="Index" class="btn btn-secondary mt-3">Kembali</a>
                        <button type="submit" class="btn btn-success mt-3">Simpan</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const photoInput = document.getElementById('photoInput');
        const photoPreview = document.getElementById('photoPreview');
        const placeholder = document.getElementById('previewPlaceholder');

        // simpan daftar file di sini biar bisa dihapus sebelum submit
        let selectedFiles = [];

        // ketika input file berubah
        photoInput.addEventListener('change', function (event) {
            const files = Array.from(event.target.files);

            // tambahkan file baru ke array (tanpa duplikat)
            selectedFiles = [...selectedFiles, ...files];
            updatePreview();
        });

        // update tampilan preview
        function updatePreview() {
            photoPreview.innerHTML = ''; // kosongkan preview

            if (selectedFiles.length === 0) {
                photoPreview.appendChild(placeholder);
                return;
            }

            selectedFiles.forEach((file, index) => {
                const reader = new FileReader();
                reader.onload = function (e) {
                    const div = document.createElement('div');
                    div.classList.add('position-relative');

                    div.innerHTML = `
                        <img src="${e.target.result}" alt="${file.name}" class="img-thumbnail" style="width:150px; height:150px; object-fit:cover;">
                        <button type="button" class="btn btn-danger btn-sm position-absolute top-0 end-0 m-1" onclick="removePhoto(${index})">&times;</button>
                    `;
                    photoPreview.appendChild(div);
                };
                reader.readAsDataURL(file);
            });
        }

        // hapus foto dari daftar
        function removePhoto(index) {
            selectedFiles.splice(index, 1);
            updateFileInput();
            updatePreview();
        }

        // perbarui input file agar sesuai dengan daftar file yang masih ada
        function updateFileInput() {
            const dataTransfer = new DataTransfer();
            selectedFiles.forEach(file => dataTransfer.items.add(file));
            photoInput.files = dataTransfer.files;
        }
    </script>
}