
@{
    ViewData["Title"] = "Create Paket";
}


@model Models.PackageEventModel
<div class="row">
    <div class="col-xl">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Create Customer</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname">Nama Paket</label>
                        <input type="text" asp-for="PackageName" class="form-control" placeholder="Nama Paket" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname">Harga Mulai</label>
                        <input type="number" asp-for="BasePrice" class="form-control" placeholder="Harga Mulai" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname">Deskripsi Paket</label>
                        <textarea asp-for="Description" id="basic-default-message" class="form-control" placeholder="Deskripsi Paket" rows="6"></textarea>
                    </div>
                    <div class="d-flex justify-content-end mt-2 gap-2">
                        <a asp-action="Index" class="btn btn-secondary mt-3">Kembali</a>
                        <button type="submit" class="btn btn-success mt-3">Simpan</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>