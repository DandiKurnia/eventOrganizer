@model Models.VendorModel
@{
    ViewData["Title"] = "Detail Vendor";
}

<div class="card shadow-sm mt-3">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
            <i class="bx bx-user me-2"></i> Detail Vendor
        </h5>
        <a asp-action="Index" class="btn btn-secondary btn-sm">
            <i class="bx bx-arrow-back me-1"></i> Kembali
        </a>
    </div>

    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-6">
                <label class="fw-bold">Nama Perusahaan:</label>
                <p class="form-control-plaintext">@Model.CompanyName</p>
            </div>
            <div class="col-md-6">
                <label class="fw-bold">Kategori:</label>
                <p class="form-control-plaintext">@Model.Category</p>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label class="fw-bold">Email:</label>
                <p class="form-control-plaintext">@Model.Email</p>
            </div>
            <div class="col-md-6">
                <label class="fw-bold">Telepon:</label>
                <p class="form-control-plaintext">
                    @if (string.IsNullOrEmpty(Model.PhoneNumber))
                    {
                        <span>-</span>
                    }
                    else
                    {
                        <a href="https://wa.me/@Model.PhoneNumber"
                           target="_blank"
                           class="text-decoration-none">
                            @Model.PhoneNumber
                        </a>
                    }
                </p>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label class="fw-bold">Status:</label>
                @if (Model.Status?.ToLower() == "available")
                {
                    <span class="badge bg-success">Available</span>
                }
                else
                {
                    <span class="badge bg-danger">@Model.Status</span>
                }
            </div>
            <div class="col-md-6">
                <label class="fw-bold">Tanggal Dibuat:</label>
                <p class="form-control-plaintext">@Model.CreatedAt.ToString("dd MMM yyyy, HH:mm")</p>
            </div>
        </div>

        <div class="mb-3">
            <label class="fw-bold">Alamat:</label>
            <p class="form-control-plaintext" style="white-space: pre-line;">
                @(string.IsNullOrEmpty(Model.Address) ? "-" : Model.Address)
            </p>
        </div>

        <hr />
        <div class="d-flex justify-content-end gap-2">
            <a asp-action="Edit" asp-route-id="@Model.VendorId" class="btn btn-warning">
                <i class="bx bxs-edit"></i> Edit
            </a>
            <form asp-action="Delete" method="post" onsubmit="return confirm('Yakin ingin menghapus vendor ini?');">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.VendorId" />
                <button type="submit" class="btn btn-danger">
                    <i class="bx bx-trash"></i> Hapus
                </button>
            </form>
        </div>
    </div>
</div>
