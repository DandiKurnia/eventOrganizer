@model IEnumerable<Models.VendorModel>
@{
    ViewData["Title"] = "Vendor";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card shadow-sm">
    <!-- HEADER -->
    <div class="row align-items-center px-3 pt-3">
        <div class="col-md-6">
            <h5 class="mb-0">
                <i class="bx bx-store-alt me-2"></i> Daftar Vendor
            </h5>
        </div>

        <!-- SEARCH -->
        <div class="col-md-6 d-flex justify-content-end">
            <form asp-action="Index" method="get" class="d-flex">
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bx bx-search"></i>
                    </span>
                    <input type="text" 
                           name="search" 
                           class="form-control" 
                           placeholder="Cari vendor..."
                           value="@ViewBag.Search" />
                </div>
                <button type="submit" class="btn btn-primary ms-2">Cari</button>
            </form>
        </div>
    </div>

    <hr />

    <!-- BODY -->
    <div class="card-body p-0">
        <div class="table-responsive text-nowrap">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>No</th>
                        <th>Nama Vendor</th>
                        <th>Email</th>
                        <th>Telepon</th>
                        <th>Kategori</th>
                        <th>Status</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int no = (ViewBag.CurrentPage - 1) * 10 + 1;
                    }
                    @if (!Model.Any())
                    {
                        <tr><td colspan="7" class="text-center text-muted p-4">Data tidak ditemukan</td></tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@no</td>
                                <td><strong>@item.CompanyName</strong></td>
                                <td>@item.Email</td>
                                <td>@(string.IsNullOrEmpty(item.PhoneNumber) ? "-" : item.PhoneNumber)</td>
                                <td>
                                    @if(item.Categories != null && item.Categories.Any())
                                    {
                                        @string.Join(", ", item.Categories.Select(c => c.CategoryName))
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @switch (item.Status?.ToLower())
                                    {
                                        case "available":
                                        case "active":
                                            <span class="badge bg-success">@item.Status</span>
                                            break;
                                        case "inactive":
                                        case "unavailable":
                                            <span class="badge bg-secondary">@item.Status</span>
                                            break;
                                        case "suspended":
                                        case "banned":
                                            <span class="badge bg-danger">@item.Status</span>
                                            break;
                                        default:
                                            <span class="badge bg-info">@item.Status</span>
                                            break;
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Detail" asp-route-id="@item.VendorId" class="btn btn-info btn-sm" title="Detail">
                                            <i class="bx bxs-show"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.VendorId" class="btn btn-warning btn-sm" title="Edit">
                                            <i class="bx bxs-edit"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            no++;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- PAGINATION -->
    @if (ViewBag.TotalPages > 1)
    {
        <nav class="mt-3 pb-3">
            <ul class="pagination justify-content-center mb-0">
                @{
                    int currentPage = ViewBag.CurrentPage;
                    int totalPages = ViewBag.TotalPages;
                    string search = ViewBag.Search;
                }

                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@(currentPage - 1)"
                       asp-route-search="@search">Previous</a>
                </li>

                @for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-page="@i"
                           asp-route-search="@search">@i</a>
                    </li>
                }

                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@(currentPage + 1)"
                       asp-route-search="@search">Next</a>
                </li>
            </ul>
        </nav>
    }
</div>
