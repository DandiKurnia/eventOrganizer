@model IEnumerable<Models.CategoryModel>

@{
    ViewData["Title"] = "Kategori";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="row align-items-center">
        <div class="col-6">
            <h5 class="card-header">Kategori</h5>
        </div>

        <div class="col-6 p-3 d-flex justify-content-end">
            <form asp-action="Index" method="get" class="d-flex me-2">
                <div class="input-group me-2">
                    <span class="input-group-text">
                        <i class="bx bx-search"></i>
                    </span>
                    <input type="text" name="search" class="form-control"
                           placeholder="Cari kategori..."
                           value="@ViewBag.Search" />
                </div>
                <button class="btn btn-primary">Cari</button>
            </form>

            <a asp-action="Create" class="btn btn-primary">Tambah</a>
        </div>
    </div>

    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Nama Kategori</th>
                    <th>Dibuat</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int no = 1;
                }

                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="4" class="text-center text-muted">
                            Data tidak ditemukan
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@no</td>
                            <td>@item.CategoryName</td>
                            <td>@item.CreatedAt.ToString("dd/MM/yyyy")</td>
                            <td class="d-flex gap-1">

                                <a asp-action="Edit" asp-route-id="@item.CategoryId"
                                   class="btn btn-warning btn-sm">
                                    <i class="bx bxs-edit"></i>
                                </a>

                                <form asp-action="Delete" method="post">
                                    <input type="hidden" name="id" value="@item.CategoryId" />
                                    <button class="btn btn-danger btn-sm"
                                            onclick="return confirm('Hapus kategori ini?')">
                                        <i class="bx bx-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                        no++;
                    }
                }
            </tbody>
        </table>
    </div>
</div>
