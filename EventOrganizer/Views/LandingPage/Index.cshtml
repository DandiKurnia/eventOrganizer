    <!-- Pricing Section -->
    <section id="pricing" class="py-5 fade-in-section">
        <div class="container">
            <h2 class="text-center section-title text-heading">Pricing</h2>
            <div class="row">
                @if (Model.ActivePackages != null && Model.ActivePackages.Any())
                {
                    @foreach (var package in Model.ActivePackages)
                    {
