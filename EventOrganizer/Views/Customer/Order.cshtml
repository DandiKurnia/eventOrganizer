@model IEnumerable<Models.OrderModel>
@{
    Layout = "_LayoutCustomer";
}

<div class="container py-5">

    <h1 class="mb-4">Pesanan Saya</h1>

    <form method="get" asp-action="Order">
        <div class="row mb-4">
            <div class="col-md-8 mb-3">
                <input type="search"
                       name="search"
                       value="@ViewBag.Search"
                       class="form-control"
                       placeholder="Cari pesanan berdasarkan paket..." />
            </div>

            <div class="col-md-4 mb-3">
                <select name="status" class="form-select" onchange="this.form.submit()">
                    <option value="all">Semua Status</option>
                    <option value="booking_confirmed" selected="@(ViewBag.Status == "booking_confirmed")">Booking Confirmed</option>
                    <option value="vendor_confirmation" selected="@(ViewBag.Status == "vendor_confirmation")">Vendor Confirmation</option>
                    <option value="waiting_validation" selected="@(ViewBag.Status == "waiting_validation")">Waiting Validation</option>
                    <option value="consultation" selected="@(ViewBag.Status == "consultation")">Consultation</option>
                </select>
            </div>
        </div>
    </form>

        @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
        TempData.Remove("SuccessMessage");
    }

    <div class="order-list">

        @if (!Model.Any())
        {
            <div class="text-center text-muted fs-5 py-5 mb-lg-5">
                <i class="bx bx-info-circle"></i> Tidak ada pesanan ditemukan.
            </div>
        }
        else
        {
            foreach (var item in Model)
            {
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start flex-wrap">
                            <div class="mb-2">
                                <a class="card-title mb-1 fs-5 fw-bold" asp-action="DetailOrder" asp-route-id="@item.OrderId">@item.PackageName</A>

                                <h6 class="card-subtitle text-muted d-flex gap-2 align-items-center pt-2">
                                    <i class="bx bxs-calendar-event"></i>
                                    <span>@item.EventDate.ToString("dd MMMM yyyy")</span>
                                </h6>
                            </div>

                            @{
                                string badgeClass = item.Status switch
                                {
                                    "waiting_validation" => "bg-warning text-dark",
                                    "consultation" => "bg-info text-dark",
                                    "vendor_confirmation" => "bg-primary",
                                    "booking confirmed" => "bg-success",
                                    "cancelled" => "bg-danger",
                                    _ => "bg-secondary"
                                };
                            }
                            <span class="badge @badgeClass rounded-pill fs-6">
                                @item.Status.Replace("_", " ").ToUpper()
                            </span>


                        </div>

                        <hr />

                        <p class="card-text mt-2">
                            <strong><i class="bi bi-chat-left-text"></i> Catatan Tambahan:</strong>
                            <span class="text-muted">
                                @(!string.IsNullOrEmpty(item.AdditionalRequest) ? item.AdditionalRequest : "Tidak ada catatan.")
                            </span>
                        </p>
                    </div>
                </div>
            }
        }
    </div>

</div>
