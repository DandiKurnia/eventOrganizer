@using Models
@model IEnumerable<Models.PackageEventModel>

@{
    Layout = "_LayoutCustomer";
}




<!-- ================= CONTENT ================= -->
<div class="container py-5">

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
        TempData.Remove("SuccessMessage");
    }

    <!-- ================= FILTER ================= -->
    <form method="get" class="row g-2 mb-4">

        <div class="col-md-8">
            <input type="text" name="search"
                   class="form-control"
                   placeholder="Cari paket..."
                   value="@Context.Request.Query["search"]" />
        </div>

        <div class="col-md-4">
            <select name="category"
                    class="form-select"
                    onchange="this.form.submit()">

                <option value="">Semua Kategori</option>

                @foreach (var c in (IEnumerable<CategoryModel>)ViewBag.Categories)
                {
                    <option value="@c.CategoryId"
                            selected="@(ViewBag.SelectedCategory?.ToString() == c.CategoryId.ToString())">
                        @c.CategoryName
                    </option>
                }
            </select>
        </div>

    </form>

    <!-- ================= PACKAGE LIST ================= -->
    <h2 class="text-center mb-4">Our Event Packages</h2>

    <div class="row g-4">

        @if (!Model.Any())
        {
            <div class="text-center text-muted py-5">
                <i class="bx bx-package fs-1 mb-3"></i>
                <p class="fs-5">Tidak ada paket ditemukan</p>
            </div>
        }
        else
        {
            foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100 shadow-sm package-card">

                        <span class="badge position-absolute m-3 @(item.Status == "available" ? "bg-success" : "bg-secondary")">
                            @item.Status
                        </span>

                        <img src="@(string.IsNullOrEmpty(item.ThumbnailUrl)
                                                                 ? "/img/no-image.png"
                                                                 : item.ThumbnailUrl)"
                                                                                     class="card-img-top package-img"
                                                                                     alt="@item.PackageName" />

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@item.PackageName</h5>

                            <p class="card-text text-muted flex-grow-1">
                                @(string.IsNullOrEmpty(item.Description)
                                                        ? "Deskripsi belum tersedia."
                                                        : item.Description.Length > 120
                                                        ? item.Description.Substring(0, 120) + "..."
                                                        : item.Description)
                    </p>

                            <p class="fw-bold text-primary mb-3">
                                Mulai dari Rp @item.BasePrice.ToString("N0")
                            </p>

                    @if (item.Status == "available")
                            {
                                <a asp-action="Detail"
                                   asp-route-id="@item.PackageEventId"
                                   class="btn btn-primary w-100">
                                    <i class="bx bx-check-circle"></i> Pilih Paket
                                </a>
                            } 
                            else {
                                <button class="btn btn-secondary w-100" disabled>
                                    <i class="bx bx-lock accept-policy"></i> Paket Tidak Tersedia
                                </button>
                            }


                        </div>
                    </div>
                </div>
                }
        }
    </div>
</div>
