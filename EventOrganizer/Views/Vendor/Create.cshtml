@{
    ViewData["Title"] = "Crater Data Vendor";
}

@model Models.VendorModel
<div class="row">
    <div class="col-xl">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Data Vendor</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname">Nama Perusahaan</label>
                        <input type="text" asp-for="CompanyName" class="form-control" placeholder="Nama Perusahaan" required>
                        <span asp-validation-for="CompanyName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname">Kategori</label>
                        <input type="text" asp-for="Category" class="form-control" placeholder="Kategori" required>
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname">Email</label>
                        <input type="text" asp-for="Email" class="form-control" placeholder="Kategori" required>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname">Nomer Telepon</label>
                        <input type="number" asp-for="Phone" class="form-control" placeholder="Nomer Telepon" required>
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname">Alamat</label>
                        <input type="text" asp-for="Address" class="form-control" placeholder="Alamat" required>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-end mt-2 gap-2">
                        <a asp-action="Index" class="btn btn-secondary mt-3">Kembali</a>
                        <button type="submit" class="btn btn-success mt-3">Simpan</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>