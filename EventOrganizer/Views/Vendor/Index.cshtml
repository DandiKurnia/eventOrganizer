@model Models.VendorDashboardViewModel

@{
    ViewData["Title"] = "Dashboard Vendor";
}

<div class="row">

    <!-- ================= ALERT ================= -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["AlertDataMessage"] != null)
    {
        <div class="alert alert-warning fade show" role="alert">
            @TempData["AlertDataMessage"]
            <a asp-action="Create" class="fw-bold text-decoration-underline">Lengkapi sekarang</a>
        </div>
    }
    <!-- ================= END ALERT ================= -->
    <!-- ================= HERO ================= -->
    <div class="col-lg-8 mb-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title text-primary">
                    Dashboard Vendor 🎯
                </h5>

                <p class="mb-2">
                    Total Order:
                    <span class="fw-bold">@Model.TotalOrders</span>
                </p>

                <p class="mb-0">
                    Status Vendor:
                    <span class="fw-bold @(Model.VendorStatus == "available" ? "text-success" : "text-danger")">
                        @Model.VendorStatus
                    </span>
                </p>
            </div>
        </div>
    </div>

    <!-- ================= UPCOMING EVENTS ================= -->
    <div class="col-lg-4 mb-4">
        <div class="card">
            <div class="card-body text-center">
                <span class="fw-semibold d-block mb-1">Upcoming Events</span>
                <h2 class="mb-0">@Model.UpcomingEvents</h2>
                <small class="text-muted">7 hari ke depan</small>
            </div>
        </div>
    </div>

    <!-- ================= ORDER STATUS ================= -->
    <div class="col-lg-3 col-md-6 mb-4">
        <div class="card border-warning">
            <div class="card-body text-center">
                <h3>@Model.WaitingConfirmation</h3>
                <small>Menunggu Konfirmasi</small>

                @if (Model.WaitingConfirmation > 0)
                {
                    <div class="text-danger fw-semibold mt-1">
                        Perlu Tindakan
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-md-6 mb-4">
        <div class="card border-success">
            <div class="card-body text-center">
                <h3>@Model.AcceptedOrders</h3>
                <small>Diterima</small>
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-md-6 mb-4">
        <div class="card border-danger">
            <div class="card-body text-center">
                <h3>@Model.RejectedOrders</h3>
                <small>Ditolak</small>
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-md-6 mb-4">
        <div class="card border-primary">
            <div class="card-body text-center">
                <h3>@Model.TotalOrders</h3>
                <small>Total Order</small>
            </div>
        </div>
    </div>

    <!-- ================= REVENUE ================= -->
    <div class="col-lg-6 mb-4">
        <div class="card h-100">
            <div class="card-body">
                <span class="fw-semibold d-block mb-1">Total Revenue</span>
                <h3 class="text-success">
                    Rp @Model.TotalRevenue.ToString("N0")
                </h3>
                <small class="text-muted">
                    Total order yang diterima
                </small>
            </div>
        </div>
    </div>

    <div class="col-lg-6 mb-4">
        <div class="card h-100">
            <div class="card-body">
                <span class="fw-semibold d-block mb-1">Revenue Bulan Ini</span>
                <h3 class="text-primary">
                    Rp @Model.MonthlyRevenue.ToString("N0")
                </h3>
                <small class="text-muted">
                    Bulan berjalan
                </small>
            </div>
        </div>
    </div>

</div>
