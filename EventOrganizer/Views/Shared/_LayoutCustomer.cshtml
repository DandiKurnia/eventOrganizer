<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EventPro</title>

    <!-- Google Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Public+Sans:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Icons -->
    <link rel="stylesheet" href="~/vendor/fonts/boxicons.css" />

    <!-- Bootstrap / Core CSS -->
    <link rel="stylesheet" href="~/vendor/css/core.css" />
    <link rel="stylesheet" href="~/vendor/css/theme-default.css" />

    <!-- ================= CUSTOM STYLE ================= -->
    <style>
        body {
            font-family: 'Public Sans', sans-serif;
            background-color: #f4f6fb;
        }

        /* ================= NAVBAR ================= */
        .navbar {
            background: #ffffff;
        }

        .navbar-brand {
            font-weight: 700;
            letter-spacing: -.5px;
        }

        .nav-link {
            font-weight: 500;
        }

        /* ================= HERO CAROUSEL ================= */
        .hero-carousel {
            position: relative;
            height: 520px;
            overflow: hidden;
        }

        .hero-img {
            height: 520px;
            object-fit: cover;
        }

        .hero-carousel::after {
            content: "";
            position: absolute;
            inset: 0;
            background: linear-gradient( to right, rgba(0,0,0,.55), rgba(0,0,0,.25) );
            z-index: 1;
        }

        /* konten text */
        .hero-content-overlay {
            position: absolute;
            inset: 0;
            z-index: 2;
            display: flex;
            align-items: center;
        }

        .hero-text {
            max-width: 680px;
            color: #ffffff;
        }

            .hero-text h1 {
                font-size: 3rem;
                font-weight: 700;
                line-height: 1.2;
                margin-bottom: 16px;
            }

            .hero-text p {
                font-size: 1.1rem;
                opacity: .95;
                margin-bottom: 28px;
            }

        /* CTA */
        .hero-cta .btn {
            border-radius: 999px;
            padding: 12px 28px;
            font-weight: 500;
        }

        /* konten statis */
        .hero-overlay {
            position: absolute;
            inset: 0;
            z-index: 2;
            display: flex;
            align-items: center;
        }

        .hero-box {
            max-width: 720px;
            background: rgba(255,255,255,.92);
            padding: 48px;
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0,0,0,.15);
        }

            .hero-box h1 {
                font-size: 2.6rem;
                font-weight: 700;
                margin-bottom: 16px;
                color: #111827;
            }

            .hero-box p {
                font-size: 1.05rem;
                color: #4b5563;
                margin-bottom: 28px;
            }

        .hero-cta .btn {
            border-radius: 999px;
            padding: 12px 26px;
            font-weight: 500;
        }

        /* ================= CARD ================= */
        .package-card {
            border: none;
            border-radius: 18px;
            overflow: hidden;
            transition: all .35s ease;
            background: #fff;
        }

            .package-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 20px 40px rgba(0,0,0,.08);
            }

        .package-img {
            height: 220px;
            object-fit: cover;
        }

        .status-badge {
            position: absolute;
            top: 15px;
            left: 15px;
            background: rgba(34,197,94,.15);
            color: #16a34a;
            font-weight: 600;
            font-size: .75rem;
            padding: 6px 12px;
            border-radius: 999px;
        }

        .package-carousel-img {
            width: 100%;
            height: 420px; 
            object-fit: cover; 
            object-position: center; 
            background-color: #f1f3f5; 
        }


        /* ================= FOOTER ================= */
        footer {
            background: #ffffff;
            border-top: 1px solid #e5e7eb;
            padding: 20px 0;
            margin-top: 80px;
        }

            footer p {
                margin: 0;
                color: #6b7280;
                font-size: .9rem;
            }

        /* ================= RESPONSIVE ================= */
        @@media (max-width: 768px) {
            .hero-carousel, .hero-img

        {
            height: 420px;
        }

        .hero-box {
            padding: 28px;
        }

            .hero-box h1 {
                font-size: 2rem;
            }

            .package-carousel-img {
                height: 260px;
            }

        }
    </style>
</head>

<body class="d-flex flex-column min-vh-100">

    <!-- ================= NAVBAR ================= -->
    <nav class="navbar navbar-expand-lg sticky-top shadow-sm">
        <div class="container">
            <a class="navbar-brand" href="/customer">EventPro</a>

            <button class="navbar-toggler text-black" type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-lg-center">
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["action"]!.ToString() == "Index" ? "text-primary fw-bold" : "")"
                           href="/customer">
                            Dashboard
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["action"]!.ToString() == "Order" ? "text-primary fw-bold" : "")"
                           href="/customer/order">
                            Pesanan Saya
                        </a>
                    </li>

                    <li class="nav-item ms-lg-3">
                        <form asp-controller="User" asp-action="Logout" method="post">
                            <button class="btn btn-outline-secondary btn-sm rounded-pill px-3">
                                Logout
                            </button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- ================= HERO CAROUSEL (INDEX ONLY) ================= -->
    @if (ViewContext.RouteData.Values["action"]!.ToString() == "Index")
    {
        <header class="hero-carousel zindex-1">

            <div id="heroCarousel"
                 class="carousel slide carousel-fade"
                 data-bs-ride="carousel"
                 data-bs-interval="5000">

                <div class="carousel-inner">

                    <div class="carousel-item active">
                        <img src="~/img/hero/wedding.jpg"
                             class="d-block w-100 hero-img" />
                    </div>

                    <div class="carousel-item">
                        <img src="~/img/hero/birthday.jpg"
                             class="d-block w-100 hero-img" />
                    </div>

                    <div class="carousel-item">
                        <img src="~/img/hero/catering.jpg"
                             class="d-block w-100 hero-img" />
                    </div>

                </div>
            </div>

            <!-- ===== HERO TEXT (NO CARD) ===== -->
            <div class="hero-content-overlay">
                <div class="container">
                    <div class="hero-text">

                        <h1 class="text-white">Wujudkan Event Impian Anda</h1>

                        <p>
                            Temukan paket event terbaik untuk pernikahan, ulang tahun,
                            catering, dan acara spesial lainnya
                        </p>

                        <div class="hero-cta">
                            <a href="#packages" class="btn btn-primary btn-lg">
                                Jelajahi Paket
                            </a>
                            <a href="/customer/order"
                               class="btn btn-outline-light btn-lg ms-2">
                                Pesanan Saya
                            </a>
                        </div>

                    </div>
                </div>
            </div>

        </header>
    }


    <!-- ================= PAGE CONTENT ================= -->
    <main class="flex-fill">
        @RenderBody()
    </main>

    <!-- ================= FOOTER ================= -->
    <footer>
        <div class="container text-center mt-auto">
            <p>© @DateTime.Now.Year EventPro — All rights reserved.</p>
        </div>
    </footer>

    <!-- ================= JS ================= -->
    <script src="~/vendor/libs/jquery/jquery.js"></script>
    <script src="~/vendor/js/bootstrap.js"></script>

</body>
</html>
