@{
    ViewData["Title"] = "Dashboard Staff";
}

<h4 class="fw-bold py-3 mb-4">
    <span class="text-muted fw-light">Staff /</span> Dashboard
</h4>

<div class="row">
    <div class="col-lg-8 mb-4 order-0">
        <div class="card">
            <div class="d-flex align-items-end row">
                <div class="col-sm-7">
                    <div class="card-body">
                        <h5 class="card-title text-primary">
                            Selamat Datang Staff, @Context.Session.GetString("Username") 🎉
                        </h5>
                        <p class="mb-4">
                            Berikut adalah ringkasan aktivitas hari ini.
                        </p>
                    </div>
                </div>
                <div class="col-sm-5 text-center text-sm-left">
                    <img src="/assets/img/illustrations/card-illustration.png"
                         height="140" alt="View Badge User">
                </div>
            </div>
        </div>
    </div>

    @* Card kecil *@
    <div class="col-lg-4 col-md-4 order-1">
        <div class="row">
            <div class="col-lg-6 col-md-12 col-6 mb-4">
                <div class="card">
                    <div class="card-body">
                        <span class="fw-semibold d-block mb-1">Total Order</span>
                        <h3 class="card-title mb-2">123</h3>
                        <small class="text-success fw-semibold"><i class="bx bx-up-arrow-alt"></i> +12%</small>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 col-md-12 col-6 mb-4">
                <div class="card">
                    <div class="card-body">
                        <span class="fw-semibold d-block mb-1">Progress Hari Ini</span>
                        <h3 class="card-title mb-2">18 Tasks</h3>
                        <small class="text-info fw-semibold"><i class="bx bx-time-five"></i> On Track</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @* Grafik *@
    <div class="col-12 col-lg-8 order-2 mb-4">
        <div class="card">
            <h5 class="card-header m-0 me-2 pb-3">Aktivitas Bulanan</h5>
            <div id="staffChart"></div>
        </div>
    </div>
</div>
