@model IEnumerable<Models.CategoryModel>

@{
    ViewData["Title"] = "Kategori";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card shadow-sm">
    <!-- HEADER -->
    <div class="row align-items-center px-3 pt-3">
        <div class="col-md-6">
            <h5 class="mb-0">
                <i class="bx bx-category me-2"></i> Daftar Kategori
            </h5>
        </div>

        <!-- SEARCH & ACTION -->
        <div class="col-md-6 d-flex justify-content-end">
             <div class="d-flex">
                <form asp-action="Index" method="get" class="d-flex me-2">
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="bx bx-search"></i>
                        </span>
                        <input type="text" name="search" class="form-control"
                               placeholder="Cari kategori..."
                               value="@ViewBag.Search" />
                    </div>
                    <button class="btn btn-primary ms-2">Cari</button>
                </form>

                <a asp-action="Create" class="btn btn-primary">
                    <i class="bx bx-plus me-1"></i> Tambah
                </a>
            </div>
        </div>
    </div>

    <hr />

    <!-- BODY -->
    <div class="card-body p-0">
        <div class="table-responsive text-nowrap">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>No</th>
                        <th>Nama Kategori</th>
                        <th>Dibuat</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int no = 1;
                    }

                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted p-4">
                                Data tidak ditemukan
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@no</td>
                                <td><strong>@item.CategoryName</strong></td>
                                <td>@item.CreatedAt.ToString("dd/MM/yyyy")</td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.CategoryId"
                                           class="btn btn-warning btn-sm" title="Edit">
                                            <i class="bx bxs-edit"></i>
                                        </a>
                                        <button type="button"
                                                class="btn btn-danger btn-sm"
                                                onclick="submitDelete('@item.CategoryId')">
                                            <i class="bx bx-trash"></i>
                                        </button>
                                    </div>
                                    <form id="deleteForm-@item.CategoryId"
                                    asp-action="Delete"
                                    method="post"
                                    style="display:none;" >
                                    @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@item.CategoryId" />
                                    </form>
                                </td>
                            </tr>
                            no++;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function submitDelete(id) {
            if (confirm("Apakah Anda yakin ingin menghapus data ini?")) {
                document.getElementById("deleteForm-" + id).submit();
            }
        }
    </script>
}
