@model IEnumerable<Models.OrderModel>
@{
    ViewData["Title"] = "Pemesanan";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
    TempData.Remove("SuccessMessage");
}

<div class="card">
    <div class="row align-items-center">
        <div class="col-6">
            <h5 class="card-header">Pemesanan</h5>
        </div>

        <!-- SEARCH -->
        <div class="col-6 p-3 d-flex justify-content-end">
            <form asp-action="Index" asp-controller="Order" method="get" class="d-flex">
                <div class="input-group">
                    <span class="input-group-text"><i class="bx bx-search"></i></span>
                    <input type="text" name="search" class="form-control" placeholder="Cari nama klien / paket / tanggal"
                           value="@ViewBag.Search" />
                </div>
                <button type="submit" class="btn btn-primary ms-2">Cari</button>
            </form>
        </div>
    </div>

    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead>
                <tr class="text-nowrap">
                    <th>No</th>
                    <th>Nama Client</th>
                    <th>Tanggal Event</th>
                    <th>Jenis Paket</th>
                    <th>Action</th>
                </tr>
            </thead>

            <tbody class="table-border-bottom-0">
                @{
                    int no = (ViewBag.CurrentPage - 1) * 10 + 1;
                }

                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted p-3">
                            Tidak ada data ditemukan.
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var order in Model)
                    {
                        <tr>
                            <th scope="row">@no</th>
                            <td>@order.ClientName</td>
                            <td>@order.EventDate.ToString("dd/MM/yyyy")</td>
                            <td>@order.PackageName</td>
                            <td class="d-flex">

                                <!-- Detail Button -->
                                <a asp-action="Detail" asp-route-id="@order.OrderId"
                                   class="btn btn-info btn-sm me-2">
                                    <i class='bx bxs-show text-white'></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@order.OrderId" class="btn btn-warning btn-sm">
                                    <i class='bx bxs-edit'></i>
                                </a>

                            </td>
                        </tr>
                        no++;
                    }
                }
            </tbody>
        </table>
    </div>

    <!-- PAGINATION -->
    @if (ViewBag.TotalPages > 1)
    {
        <nav class="mt-3 pb-3">
            <ul class="pagination justify-content-center">

                <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@(ViewBag.CurrentPage - 1)"
                       asp-route-search="@ViewBag.Search">Previous</a>
                </li>

                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-page="@i"
                           asp-route-search="@ViewBag.Search">@i</a>
                    </li>
                }

                <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@(ViewBag.CurrentPage + 1)"
                       asp-route-search="@ViewBag.Search">Next</a>
                </li>

            </ul>
        </nav>
    }
</div>
